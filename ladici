require 'protocols'
require 'hub'
require 'remotes'
require 'locations'
require 'irc_client'
require 'irc_server'

locations.register('localhost',
                   'IRC',
                   {host='localhost', nick='ladici', realname='Operator Real Name', join='#ladi'})

err = irc_server.create()
if err then
  print(err)
else
  while remotes.dispatch() do end
end
